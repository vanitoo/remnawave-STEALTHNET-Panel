# ============================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ============================================

# JWT секретный ключ (сгенерируйте случайную строку)
# Генерация: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_minimum_32_characters

# URL внешнего API (RemnaWave)
API_URL=https://api.remnawave.com

# Токен администратора для RemnaWave API
ADMIN_TOKEN=your_admin_token_here

# ID сквада по умолчанию
DEFAULT_SQUAD_ID=your_default_squad_id_here

# URL вашего сервера (без https://, будет добавлено автоматически)
# Пример: panel.stealthnet.app 
YOUR_SERVER_IP=panel.stealthnet.app

# Примечание по платежам:
# - ключи платёжных систем (в т.ч. YooKassa Shop ID / Secret Key) настраиваются в админ-панели и шифруются с помощью FERNET_KEY
# - webhook для YooKassa: https://<YOUR_SERVER_IP>/api/webhook/yookassa

# Название сервиса (отображается в боте)
SERVICE_NAME=StealthNET

# ============================================
# БАЗА ДАННЫХ
# ============================================

# Тип базы данных: sqlite, postgresql, postgres
# Для Docker используйте postgresql
# Настройки Redis (опционально)
DB_HOST=postgres
DB_TYPE=postgresql
DB_PORT=5432
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Оставьте пустым, если пароль не установлен
CACHE_DEFAULT_TIMEOUT=300
# PostgreSQL Database Configuration
DATABASE_URL=postgresql://stealthnet:stealthnet_password_change_me@postgres:5432/stealthnet

# URI базы данных (для SQLite оставьте как есть, используется если DB_TYPE не указан)
SQLALCHEMY_DATABASE_URI=sqlite:///instance/stealthnet.db

# ============================================
# ШИФРОВАНИЕ
# ============================================

# Fernet ключ для шифрования
# Генерация: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your_fernet_key_here_base64_encoded

# ============================================
# TELEGRAM BOT
# ============================================

# Токен Telegram бота для клиентов (получите у @BotFather)
CLIENT_BOT_TOKEN=your_telegram_bot_token_here

# URL Flask API для бота (внутри Docker используйте http://api:5000)
FLASK_API_URL=http://api:5000

# URL для Mini-App (обычно совпадает с YOUR_SERVER_IP)
MINIAPP_URL=https://panel.stealthnet.app/miniapp

# Пути к мини-приложениям (внутри Docker контейнера)
# Для Docker используйте /app/frontend/build/miniapp
MINIAPP_PATH=/app/frontend/build/miniapp
MINIAPP_V2_PATH=/app/frontend/build/miniapp-v2

# Имя бота для Telegram Login Widget
TELEGRAM_BOT_NAME=you_name_bot

# ============================================
# БОТ API (опционально для бота (Бедолаги)
# ============================================

# URL веб-API бота (если используется отдельный сервис)
BOT_API_URL=

# Токен для доступа к API бота
BOT_API_TOKEN=




# ============================================
# EMAIL НАСТРОЙКИ
# ============================================

# SMTP сервер для отправки email
MAIL_SERVER=smtp.gmail.com

# Порт SMTP (обычно 465 для SSL или 587 для TLS)
MAIL_PORT=465

# Имя пользователя для SMTP
MAIL_USERNAME=

# Пароль для SMTP (используйте App Password для Gmail)
MAIL_PASSWORD=


# ============================================
# АВТОМАТИЧЕСКАЯ РАССЫЛКА
# ============================================

# Включить/выключить автоматическую рассылку (true/false)
AUTO_BROADCAST_ENABLED=true

# Часы запуска рассылки (через запятую)
# Примеры: "9" (1 раз в день), "9,14,19" (3 раза в день)
AUTO_BROADCAST_HOURS=9,14,19

# ============================================
# КАЗИНО (Колесо Фортуны)
# ============================================

# Включить/выключить казино (true/false)
CASINO_ENABLED=false

# Минимальная ставка в днях
CASINO_MIN_BET=1

# Максимальная ставка в днях
CASINO_MAX_BET=30

# Максимум игр в день на пользователя
CASINO_MAX_GAMES_PER_DAY=10

# Шансы секторов колеса (в процентах, сумма = 100)
# x0 - потеря ставки, x0.5 - половина обратно, x1 - ставка обратно
# x1.5 - +50%, x2 - удвоение, x3 - утроение, x5 - джекпот
CASINO_CHANCE_X0=40
CASINO_CHANCE_X05=15
CASINO_CHANCE_X1=15
CASINO_CHANCE_X15=12
CASINO_CHANCE_X2=10
CASINO_CHANCE_X3=5
CASINO_CHANCE_X5=3
