# ============================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ============================================

# JWT секретный ключ (сгенерируйте случайную строку)
# Генерация: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_minimum_32_characters

# URL внешнего API (RemnaWave)
API_URL=https://api.remnawave.com

# Токен администратора для RemnaWave API
ADMIN_TOKEN=your_admin_token_here

# ID сквада по умолчанию
DEFAULT_SQUAD_ID=your_default_squad_id_here

# URL вашего сервера (без https://, будет добавлено автоматически)
# Пример: panel.stealthnet.app 
YOUR_SERVER_IP=panel.stealthnet.app

# Название сервиса (отображается в боте)
SERVICE_NAME=StealthNET

# ============================================
# БАЗА ДАННЫХ
# ============================================

# URI базы данных (для SQLite оставьте как есть)
SQLALCHEMY_DATABASE_URI=sqlite:///instance/stealthnet.db

# ============================================
# ШИФРОВАНИЕ
# ============================================

# Fernet ключ для шифрования
# Генерация: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your_fernet_key_here_base64_encoded

# ============================================
# TELEGRAM BOT
# ============================================

# Токен Telegram бота для клиентов (получите у @BotFather)
CLIENT_BOT_TOKEN=your_telegram_bot_token_here

# URL Flask API для бота (внутри Docker используйте http://api:5000)
FLASK_API_URL=http://api:5000

# URL для Mini-App (обычно совпадает с YOUR_SERVER_IP)
MINIAPP_URL=https://panel.stealthnet.app/miniapp

# Имя бота для Telegram Login Widget
TELEGRAM_BOT_NAME=you_name_bot
MINIAPP_PATH=/opt/STEALTHNET-Admin-Panel/frontend/build/miniapp
# ============================================
# БОТ API (опционально для бота (Бедолаги)
# ============================================

# URL веб-API бота (если используется отдельный сервис)
BOT_API_URL=

# Токен для доступа к API бота
BOT_API_TOKEN=




# ============================================
# EMAIL НАСТРОЙКИ
# ============================================

# SMTP сервер для отправки email
MAIL_SERVER=smtp.gmail.com

# Порт SMTP (обычно 465 для SSL или 587 для TLS)
MAIL_PORT=465

# Имя пользователя для SMTP
MAIL_USERNAME=your_email@gmail.com

# Пароль для SMTP (используйте App Password для Gmail)
MAIL_PASSWORD=your_app_password_here

